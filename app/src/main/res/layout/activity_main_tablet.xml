<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/listview_drawer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:layout_gravity="start"
        android:background="@color/uas_azul"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout android:id="@+id/nav_header_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/uas_azul"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:src="@drawable/usuario_img"
                app:border_color="@color/black"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_profile"
                android:gravity="left"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:typeface="monospace"
                android:textColor="#fff"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:typeface="monospace"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:gravity="left"
                android:id="@+id/role_profile"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/faculty_profile"
                android:gravity="left"
                android:layout_marginBottom="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:typeface="monospace"
                android:textColor="#fff"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <LinearLayout android:id="@+id/home_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_option_menu_selector"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home"/>

            <TextView android:id="@+id/nav_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/uas_nav_inicio"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginLeft="10dp"
                android:typeface="monospace"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout android:id="@+id/specialties_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_option_menu_selector"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_faculty_white"/>

            <TextView android:id="@+id/nav_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/uas_ab_especialidades"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginLeft="10dp"
                android:typeface="monospace"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout android:id="@+id/objectives_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_option_menu_selector"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_objetivos_ed"/>

            <TextView android:id="@+id/nav_text_inicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/uas_nav_objEd"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginLeft="10dp"
                android:typeface="monospace"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout android:id="@+id/result_stu_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_option_menu_selector"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_resultados_est" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/uas_nav_resEst"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginLeft="10dp"
                android:typeface="monospace"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout android:id="@+id/rubrics_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_option_menu_selector"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_rubricas" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/uas_nav_rubricas"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginLeft="10dp"
                android:typeface="monospace"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout android:id="@+id/aspects_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_option_menu_selector"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_aspectos" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/uas_nav_aspectos"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginLeft="10dp"
                android:typeface="monospace"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout android:id="@+id/courses_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_option_menu_selector"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cursos" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/uas_nav_cursos"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginLeft="10dp"
                android:typeface="monospace"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout android:id="@+id/improve_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_option_menu_selector"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mejora_cont" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mejora contínua"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginLeft="10dp"
                android:typeface="monospace"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout android:id="@+id/result_eval_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_option_menu_selector"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_resultados_eval" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resultados de evaluaciones"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginLeft="10dp"
                android:typeface="monospace"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout android:id="@+id/logout_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_option_menu_selector"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logout" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/uas_nav_salir"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginLeft="10dp"
                android:typeface="monospace"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.75"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_main"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:theme="@style/ToolbarTheme" />

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/toolbar_main"
                android:background="@color/uas_plomo"
                android:orientation="vertical"
                android:weightSum="1">

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>