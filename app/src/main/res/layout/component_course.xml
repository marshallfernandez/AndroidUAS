<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/component_course_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_components_list_selector"
    android:orientation="vertical"
    android:padding="@dimen/general_bg_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/component_course_codigo"
            style="@style/GeneralTextViewsMedium"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/component_course_nombre"
            style="@style/GeneralTextViewsMedium"
            android:layout_toRightOf="@id/component_course_codigo"
            android:layout_marginLeft="@dimen/general_bg_padding"
            android:textColor="@color/black" />

    </RelativeLayout>

</LinearLayout>