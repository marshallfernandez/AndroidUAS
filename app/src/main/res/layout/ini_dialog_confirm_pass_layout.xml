<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/uas_plomo_fondo"
    android:padding="@dimen/general_bg_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/uas_plomo"
        android:padding="@dimen/general_bg_padding">

        <EditText android:id="@+id/ini_dialog_confirm_pass_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresar ContraseÃ±a"
            android:textColorHint="@color/uas_plomo_oscuro"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:typeface="monospace"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button android:id="@+id/ini_dialog_confirm_pass_boton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/uas_ini_dialog_confirm_pass"
            android:textColor="@color/black"
            android:typeface="monospace"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:background="@drawable/bg_button_login_selector"
            android:textAllCaps="false"
            android:padding="@dimen/general_bg_padding"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</LinearLayout>