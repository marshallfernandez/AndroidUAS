<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_specialty_item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_specialty_selector"
    android:layout_margin="@dimen/general_bg_padding"
    android:padding="10dp">

    <ImageView android:id="@+id/ic_specialty1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_faculty"/>

    <TextView android:id="@+id/specialty_name"
        style="@style/GeneralTextViewsMedium"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"/>

</LinearLayout>