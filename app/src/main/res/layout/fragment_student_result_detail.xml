<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uas_plomo_fondo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear_list_stud_res_educ_obj"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/uas_plomo_fondo"
            android:orientation="vertical"
            android:padding="@dimen/general_bg_padding">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/uas_plomo"
                android:padding="@dimen/general_bg_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Identificador:"/>

                <TextView android:id="@+id/stud_res_detail_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/black"
                    android:text="2016-2"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/uas_plomo"
                android:padding="@dimen/general_bg_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Ciclo de registro:"/>

                <TextView android:id="@+id/stud_res_detail_semester"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/black"
                    android:text="2016-2"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/uas_plomo"
                android:padding="@dimen/general_bg_padding">

                <TextView android:id="@+id/stud_res_detail_description_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="DescripciÃ³n:"/>

                <TextView android:id="@+id/stud_res_detail_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/black"
                    android:text="2016-2"
                    android:layout_marginTop="@dimen/general_bg_padding"
                    android:layout_below="@id/stud_res_detail_description_title"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/uas_plomo_fondo">

                <TextView android:id="@+id/stud_res_detail_edu_obj_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:textColor="@color/uas_plomo_oscuro"
                    android:text="Objetivos Educacionales Asociados"
                    android:layout_margin="@dimen/general_bg_padding"/>

                <LinearLayout android:id="@+id/stud_res_detail_educ_obj_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/stud_res_detail_edu_obj_title"
                    android:orientation="vertical"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>