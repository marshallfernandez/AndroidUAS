<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/component_schedule_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_components_list_selector"
    android:orientation="vertical"
    android:padding="@dimen/general_bg_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/component_schedule_codigo_titulo"
            style="@style/GeneralTextViewsMedium"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="CÃ³digo:"/>

        <TextView
            android:id="@+id/component_schedule_codigo"
            style="@style/GeneralTextViewsMedium"
            android:layout_alignParentRight="true"
            android:textColor="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general_bg_padding">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">

            <Button android:id="@+id/schedule_button_evidences"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="Descargar Evidencias"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:background="@drawable/bg_button_login_selector"
                android:textAllCaps="false"
                android:padding="5dp"/>

            <Button android:id="@+id/schedule_button_teachers"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="Ver Profesores"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:background="@drawable/bg_button_login_selector"
                android:textAllCaps="false"
                android:padding="5dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/schedule_button_evidences"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>