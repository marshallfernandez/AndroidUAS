<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uas_plomo_oscuro"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/uas_plomo"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:id="@+id/home_specialty_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingeniería"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/uas_azul"
                android:textStyle="bold"
                android:typeface="monospace"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/uas_home_codigo"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/uas_azul"
                        android:textStyle="bold"
                        android:typeface="monospace" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/uas_home_descripcion"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/uas_azul"
                        android:textStyle="bold"
                        android:typeface="monospace"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/uas_home_coordinador"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/uas_azul"
                        android:textStyle="bold"
                        android:typeface="monospace"
                        android:layout_marginTop="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/uas_home_criterios"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/uas_azul"
                        android:textStyle="bold"
                        android:typeface="monospace"
                        android:layout_marginTop="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/uas_home_aceptacion"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/uas_azul"
                        android:textStyle="bold"
                        android:typeface="monospace"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/uas_home_aceptacion_porc"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/uas_azul"
                        android:textStyle="bold"
                        android:typeface="monospace"
                        android:layout_marginTop="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="50dp">

                    <TextView android:id="@+id/home_specialty_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingeniería"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/uas_azul"
                        android:typeface="monospace" />

                    <TextView android:id="@+id/home_specialty_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingeniería"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/uas_azul"
                        android:typeface="monospace"
                        android:layout_marginTop="5dp"/>

                    <TextView android:id="@+id/home_specialty_coordinator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingeniería"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/uas_azul"
                        android:typeface="monospace"
                        android:layout_marginTop="5dp"/>

                    <TextView android:id="@+id/home_specialty_criteria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingeniería"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/uas_azul"
                        android:typeface="monospace"
                        android:layout_marginTop="5dp"/>

                    <TextView android:id="@+id/home_specialty_aceptation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingeniería"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/uas_azul"
                        android:typeface="monospace"
                        android:layout_marginTop="5dp"/>

                    <TextView android:id="@+id/home_specialty_aceptation_perc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingeniería"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/uas_azul"
                        android:typeface="monospace"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>