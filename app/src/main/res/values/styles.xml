<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.AppTheme">

    </style>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/uas_azul</item>
        <item name="colorPrimaryDark">@color/uas_azul_oscuro</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlHighlight">@color/uas_azul_claro</item>
        <item name="android:windowBackground">@color/uas_azul</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimary">@color/uas_azul</item>
        <item name="colorPrimaryDark">@color/uas_azul</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlHighlight">@color/transparent</item>
        <item name="android:windowBackground">@color/uas_azul</item>
    </style>

    <style name="NavigationViewTheme">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlHighlight">@color/uas_azul_claro</item>
        <item name="android:windowBackground">@color/uas_azul</item>
    </style>

    <style name="EditTextsLogin" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLength">8</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColorHint">@color/uas_plomo_oscuro</item>
    </style>

    <style name="GeneralTextViewsSmall" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="GeneralTextViewsMedium" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="GeneralTextViewsLarge" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
</resources>
